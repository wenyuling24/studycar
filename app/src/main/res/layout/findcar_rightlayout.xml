<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_coachrightLa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray_bg">

        <TextView
            android:id="@+id/id_coachshowrighttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="搜车"
            android:textColor="@color/title_color"
            android:textSize="16sp" />


    </RelativeLayout>


    <com.kunzhuo.xuechelang.widget.ScrollLayout
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_coachrightLa"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="品牌(点击选择)"
                android:textColor="@color/title_color"
                android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp">

                <com.kunzhuo.xuechelang.widget.spinner.CustomerSpinner
                    android:id="@+id/spinnerBrand"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="车型(点击选择)"
                android:textColor="@color/title_color"
                android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp">

                <com.kunzhuo.xuechelang.widget.spinner.CustomerSpinner
                    android:id="@+id/spinnerYear"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner" />
            </RelativeLayout>


        </LinearLayout>

    </com.kunzhuo.xuechelang.widget.ScrollLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/id_coachrightRelease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selected"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/title_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_coachrightSure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/whilte"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>