<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="支付方式"
        android:textColor="@color/textcolor_dark" />

    <RelativeLayout
        android:id="@+id/btn_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_weixin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pay_weixin" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/icon_weixin"
            android:text="微信支付"
            android:textColor="@color/textcolor_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_weixin"
            android:layout_below="@id/tv_weixin"
            android:layout_marginTop="6dp"
            android:text="微信安全支付"
            android:textColor="@color/textcolor_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/check_01" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg" />

    <RelativeLayout
        android:id="@+id/btn_ali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_ali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pay_ali" />

        <TextView
            android:id="@+id/tv_ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/icon_ali"
            android:text="支付宝"
            android:textColor="@color/textcolor_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_ali"
            android:layout_below="@id/tv_ali"
            android:layout_marginTop="6dp"
            android:text="支付宝安全支付"
            android:textColor="@color/textcolor_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_ali"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/check_01" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg" />

    <RelativeLayout
        android:id="@+id/btn_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_cash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pay_cash" />

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/icon_cash"
            android:text="货到付款"
            android:textColor="@color/textcolor_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_cash"
            android:layout_below="@id/tv_cash"
            android:layout_marginTop="6dp"
            android:text="收货付款"
            android:textColor="@color/textcolor_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_cash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/check_02" />
    </RelativeLayout>

</LinearLayout>