<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_peiBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_selector"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="立即购买"
        android:textColor="@color/whilte" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_peiBtn"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/blue_title" />


        <com.kunzhuo.xuechelang.widget.MyScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/sc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <com.kunzhuo.xuechelang.widget.MyGridView
                        android:id="@+id/second_peiPriceGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/id_peiPriceMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/title_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/main" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/id_coachName"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="联系人: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/id_coachEditName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_coachName"
                        android:background="@color/whilte"
                        android:hint="请输入联系人的姓名"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/id_coachPhone"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="手机号码: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/id_coachEditPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_coachPhone"
                        android:background="@color/whilte"
                        android:hint="请输入联系手机号码"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/id_coachTime"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="陪练时间: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/id_coachEditTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_coachTime"
                        android:background="@color/whilte"
                        android:hint="点击选择陪练时间"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/id_coachAddressPei"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="陪练地址: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/id_coachEditAddressPei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/id_coachAddressPei"
                        android:background="@color/whilte"
                        android:hint="请输入您的陪练地址"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/id_getPeiAddressBtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/id_coachEditAddressPei"
                        android:layout_below="@id/id_coachEditAddressPei"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_seletorblue"
                        android:gravity="center_horizontal"
                        android:text="就近陪练"
                        android:textColor="@color/whilte" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/id_coachAddress"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="接送地址: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/id_coachEditAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/id_coachAddress"
                        android:background="@color/whilte"
                        android:hint="请输入您的地址"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/id_coachAddressBtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/id_coachEditAddress"
                        android:layout_below="@id/id_coachEditAddress"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_seletorblue"
                        android:gravity="center_horizontal"
                        android:text="就近接送"
                        android:textColor="@color/whilte" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/id_coachJiaNum"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="驾照号码: "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/id_coachEdiJiaNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_coachJiaNum"
                        android:background="@color/whilte"
                        android:hint="请输入驾照号码"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/id_afterPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/red_bga"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/id_afterPrice"
                        android:text="金额(元): "
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

        </com.kunzhuo.xuechelang.widget.MyScrollView>

    </LinearLayout>


</RelativeLayout>