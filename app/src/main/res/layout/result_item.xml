<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_resultlay"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/id_resultChoose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/cycle_bg"
        android:gravity="center"
        android:text="A"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/id_judgeflag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:src="@drawable/no_pass"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_resultMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/id_resultChoose"
        android:text="哈哈哈哈哈哈哈哈"
        android:textColor="@color/title_color"
        android:textSize="16sp" />

</RelativeLayout>