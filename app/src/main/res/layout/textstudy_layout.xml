<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <include layout="@layout/blue_title" />

    <com.kunzhuo.xuechelang.widget.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/freetrial"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="450dp">


                <RelativeLayout
                    android:id="@+id/id_NameLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/id_txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓    名: "
                        android:textColor="@color/whilte"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/id_editName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/id_txtName"
                        android:background="@drawable/button_choose"
                        android:hint="请输入姓名"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_PhoneLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_NameLay"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/id_txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手机号: "
                        android:textColor="@color/whilte"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/id_editPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/id_txtPhone"
                        android:background="@drawable/button_choose"
                        android:hint="请输入手机号"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_AreaLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_PhoneLay"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/id_txtArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="区    域: "
                        android:textColor="@color/whilte"
                        android:textSize="18sp" />

                    <com.kunzhuo.xuechelang.widget.spinner.CustomerSpinner
                        android:id="@+id/spinnerArea"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_txtArea"
                        android:background="@drawable/bg_spinner" />

                    <EditText
                        android:id="@+id/id_editArea"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toRightOf="@id/spinnerArea"
                        android:background="@drawable/button_choose"
                        android:hint="请输入具体地址"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/hint_color"
                        android:textSize="16sp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/id_TextDriveBtn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/id_AreaLay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_selectorgrey"
                    android:text="提   交"
                    android:textColor="@color/bg_black"
                    android:textSize="16dp" />

            </RelativeLayout>


        </LinearLayout>


    </com.kunzhuo.xuechelang.widget.MyScrollView>


</LinearLayout>